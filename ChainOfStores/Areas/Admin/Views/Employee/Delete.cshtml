@model Employee

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Employee</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="FirstName" class="p-0"></label>
            <input asp-for="FirstName" disabled type="text" class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="LastName" class="p-0"></label>
            <input asp-for="LastName" disabled type="text" class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="PhoneNumber" class="p-0"></label>
            <input asp-for="PhoneNumber" disabled type="text" class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="DateOfEmployment" class="p-0"></label>
            <input asp-for="DateOfEmployment" disabled type="text" class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="ShopId" class="p-0"></label>
            <input asp-for="ShopId" disabled class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="BakeryId" class="p-0"></label>
            <input asp-for="BakeryId" disabled class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="StorageId" class="p-0"></label>
            <input asp-for="StorageId" disabled class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="SalaryId" class="p-0"></label>
            <input asp-for="SalaryId" disabled class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="RoleId" class="p-0"></label>
            <input asp-for="RoleId" disabled class="form-control" />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button asp-controller="Employee" asp-action="Delete" type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Employee" asp-action="Index" class="btn btn-outline-secondary form-control">Back To List</a>
            </div>
        </div>
    </div>
</form>

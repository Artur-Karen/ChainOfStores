@model Bakery

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Bakery</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="PhoneNumber" class="p-0"></label>
            <input asp-for="PhoneNumber" disabled type="text" class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Shop.Name" class="p-0"></label>
            <input asp-for="Shop.Name" disabled class="form-control" />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button asp-controller="Bakery" asp-action="Delete" type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Bakery" asp-action="Index" class="btn btn-outline-secondary form-control">Back To List</a>
            </div>
        </div>
    </div>
</form>
